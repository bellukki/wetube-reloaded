mixin video(video)
    a(href=`/videos/${video.id}`).video-mixin
        img.video-mixin__thumb(src=video.thumbUrl, crossorigin="anonymous", alt="Thumbnail")
        div.video-mixin__data
            span.video-mixin__title=video.title
            div.video-mixin__meta
                img(src=video.owner.avatarUrl, crossorigin="anonymous").avatar__sm
                span #{video.owner.name || user.username}&nbsp;
                if video.meta.views <= 1 
                    small=` • ${video.meta.views} view`
                else if video.meta.views > 1
                    small=` • ${video.meta.views} views`